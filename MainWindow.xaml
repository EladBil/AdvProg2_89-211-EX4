<Window x:Class="FlightSimADVProg2_ex1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlightSimADVProg2_ex1"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1024"
        xmlns:controls="clr-namespace:FlightSimADVProg2_ex1.SubViews">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="6*"/>
        </Grid.RowDefinitions>
        <controls:Joystick x:Name="JoystickView" Grid.Column="0" Grid.Row="1"/>
        <controls:GroundRelativeView x:Name="GroundRelativeView" Grid.Column="1" Loaded="GroundRelativeView_Loaded"/>
        <controls:GraphsView Loaded="GraphsView_Loaded" x:Name="GraphsView" Grid.Row="1" Grid.Column="1"/>

    </Grid>
</Window>

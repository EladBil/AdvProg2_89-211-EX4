<Window x:Class="FlightSimADVProg2_ex1.StartingScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlightSimADVProg2_ex1"
        mc:Ignorable="d"
        Title="StartingScreen" Height="450" Width="800">
    <Grid Background="#3c444c">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Button Grid.Row="1" Grid.Column="0" Content="Open XML File" Click="OpenPropertXml_Clicked"/>
        <Button Grid.Row="1" Grid.Column="1"
                Content="Open CSV File" Click="OPENCSVBUTTON_Clicked"/>
        <Button Grid.Row="1" Grid.Column="2"
                Content="Open Flight Anomaly SCV" Click="OpenAnomalyCSV_Clicked"
               />
        <Button Grid.Row="2" Grid.Column="1" Content="Let's Start!" Click="LetsStart_Clicked"/>
    </Grid>
</Window>
